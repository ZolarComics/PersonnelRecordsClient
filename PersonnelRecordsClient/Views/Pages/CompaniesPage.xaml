<Page x:Class="PersonnelRecordsClient.Views.Pages.CompaniesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PersonnelRecordsClient.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CompaniesPage">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="661*" />
            <ColumnDefinition Width="139*" />
        </Grid.ColumnDefinitions>

        <ListView ItemsSource="{Binding Companies}"  x:Name="ListViewCompanies"
                  SelectedItem="{Binding SelectedCompany}" Background="#261D5AEB">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" Width="50" />
                    <GridViewColumn Header="Название" DisplayMemberBinding="{Binding Name}" Width="100" />
                    <GridViewColumn Header="Владелец" DisplayMemberBinding="{Binding Owner}" Width="100" />
                    <GridViewColumn Header="Адрес" DisplayMemberBinding="{Binding Adress}" Width="100" />
                    <GridViewColumn Header="Телефон" DisplayMemberBinding="{Binding Phone}" Width="100" />
                    <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}" Width="100" />

                </GridView>

            </ListView.View>
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Добавить компанию" Command="{Binding AddCompany}"/>
                    <MenuItem Header="Редактировать" Command="{Binding EditCopmany}"/>
                    <MenuItem Header="Удалить" Command="{Binding TagCompany}"/>
                </ContextMenu>
            </ListView.ContextMenu>
        </ListView>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" >
                <TextBox x:Name="searchText" Width="auto"/>
                
                <Button Content="Поиск" HorizontalAlignment="Center" Command="{Binding SearchCompany}" Grid.Column="1" Width="83"/>

            </StackPanel>

            <StackPanel Grid.Row="1">
                <TextBlock HorizontalAlignment="Center" Text="свойства записи" />

                <TextBlock Text="id"/>
                <TextBox Text="{Binding SelectedCompany.id}"/>

                <TextBlock Text="Имя"/>
                <TextBox Text="{Binding SelectedCompany.Name}"/>

                <TextBlock Text="Владелец"/>
                <TextBox Text="{Binding SelectedCompany.Owner}" />

                <TextBlock Text="Адрес"/>
                <TextBox Text="{Binding SelectedCompany.Adress}"/>

                <TextBlock Text="Телефон"/>
                <TextBox Text="{Binding SelectedCompany.Phone}" />

                <TextBlock Text="Описание"/>
                <TextBox Text="{Binding SelectedCompany.Note}" />

                <Button Grid.Row="2" Content="Добавить новвую запись"
                      Command="{Binding AddCompany}"/>

                <Button Grid.Row="1" Grid.Column="1" Content="Сохранить"
                        Command="{Binding SaveCompany}"  Grid.RowSpan="1"/>

                <Button Content="Удалить"  Grid.Row="1"
                      Command="{Binding RemoveCompany}"  Grid.RowSpan="1"/>

                <TextBlock HorizontalAlignment="Center" Text="Количество записей:"/>
                <TextBox x:Name="TextBlock1" Text="{Binding block}"
                             Width="221" IsReadOnly="True" />
                <Button Content="Сколько всего записей?" 
                      Click="Button_Click" Grid.RowSpan="1"/>


            </StackPanel>
            
        </Grid>
        
      </Grid>



