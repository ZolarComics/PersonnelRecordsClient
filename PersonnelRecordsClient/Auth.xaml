<Window x:Class="PersonnelRecordsClient.AuthorizationPOP.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonnelRecordsClient"
        mc:Ignorable="d"
        Title="Auth" Height="450" Width="800">
    <Grid  Background="White">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <TextBlock Text="Авторизация" FontSize="35" FontWeight="Bold" Margin="300 20 0 20" FontFamily="Century Gothic" VerticalAlignment="Stretch"/>
            <TextBox x:Name="TextBoxLogin" Height="25" Margin="150 0 150 10"/>
            <PasswordBox x:Name="PassBox" Margin="150 0 150 10" Height="25"/>
            <Button Content="Войти" FontSize="20" Margin="250 10"  Click="GoProgram" Background="#7F1D5AEB" FontFamily="Century Gothic"/>
            <Button HorizontalAlignment="Left" FontSize="15" Margin="10 0"  Click="GoRegistration" Content="Регистрация" Background="#7FFEDEC8" FontFamily="Century Gothic" />
        </StackPanel>
    </Grid>
</Window>