<Window x:Class="PersonnelRecordsClient.AuthorizationPOP.Authorization"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PersonnelRecordsClient"
        mc:Ignorable="d"
        Title="Authorization" Height="450" Width="800">
    <Grid Background="#ffdadada">
        <Frame Grid.Row="1" Content="{Binding CurrentPage}" NavigationUIVisibility="Hidden"/>
        <StackPanel>
            <TextBlock Text="Регистрация" FontSize="30" FontWeight="Bold" Margin="300 20 0 20"/>
            <Button HorizontalAlignment="Right" FontSize="15" Margin="5 0" x:Name="joinButton" Click="Button_Auth_Click" Content="Войти"/>
            <TextBox x:Name="textBoxLogin" Margin="150 0 150 10" Height="25"/>
            <PasswordBox x:Name="passBox" Margin="150 0 150 10" Height="25"/>
            <Button Content="Зарегистрироваться" x:Name="regButton" FontSize="20" Margin="250 10" Click="Button_Reg_Click" />
        </StackPanel>
    </Grid>
</Window>